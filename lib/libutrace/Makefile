include ../../Makefile.x86_64

LIB := utrace
SRCS := \
	ut_grammar.c \
	ut_buf.c \
	ut_cc.c \
	ut_file.c \
	ut_lex.c \
	ut_obj.c \
	ut_open.c \
	ut_parser.c \
	ut_pcb.c \
	ut_probe.c \
	ut_prof.c \
	ut_subr.c

ifeq ($(ARCH),x86_64)
SRCS  += ut_vm.c
endif

GENS := ut_grammar.c ut_grammar.h ut_lex.c
CLEANFILES += $(GENS) ut_grammar.output

CFLAGS += -I../libtree
CFLAGS += -I../libhrtime
CFLAGS += -I../libunuma
CFLAGS += -I../libvmem

.SECONDARY: $(GENS)
include ../Makefile.lib

ut_lex.o:: CFLAGS += -Wno-unused-function -Wno-redundant-decls
ut_grammar.o:: CFLAGS += -Wno-redundant-decls
ut_parser.o:: CFLAGS += -Wno-switch
ut_vm.o:: CFLAGS += -Wno-switch

#
# Ignore spurious warnings about __STRICT_ANSI__ and YYENABLE_NLS in code
# generated by bison 2.4.1 (EL6) or bison 2.3 (SLES11).  Fixed in 2.4.2.
#
ut_grammar.o:: CFLAGS += -Wno-undef

ut_lex.c: ut_lex.l ut_grammar.h
	$(FLEX) --prefix=yyut -o $@ ut_lex.l

#
# Prevent multiple invocations of bison being run in parallel, since the
# one invocation will produce both .c. and .h.  See "Introduction to Pattern
# Rules" in the gmake manual ("If a pattern rule has multiple targets, make
# knows that the rule's recipe is responsible for making all of the targets.")
#
%_grammar.c %_grammar.h: %_grammar.y
	$(BISON) -d -v -Werror --name-prefix=yyut \
	    --report-file=ut_grammar.output -o ut_grammar.c ut_grammar.y
